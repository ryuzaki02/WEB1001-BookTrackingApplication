                <label asp-for="CategoryType.CategoryTypeId"></label>
                <select asp-for="CategoryType.CategoryTypeId" asp-items="categoryTypes"></select>
                <span asp-validation-for="CategoryType.CategoryTypeId" />
            </div>
            <p>
                <a asp-controller="CategoryType" asp-action="Create">Create New Category Type</a>
            </p>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
