@model WEB1001_BookTrackingApplication.Models.Category

@{
    ViewData["Title"] = "Create";
    var categoryTypes = (IEnumerable<SelectListItem>)ViewData["CategoryTypes"];
}

<h1>Create</h1>

<h4>Category</h4>
<hr />
